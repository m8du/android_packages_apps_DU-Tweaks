<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/fingerprint_category"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <com.dirtyunicorns.dutweaks.preference.SystemSettingSwitchPreference
        android:key="fp_unlock_keystore"
        android:title="@string/fp_unlock_keystore_title"
        android:summary="@string/fp_unlock_keystore_summary"
        android:defaultValue="false" />

    <com.dirtyunicorns.dutweaks.preference.SystemSettingSwitchPreference
        android:key="fingerprint_success_vib"
        android:title="@string/fprint_sucess_vib_title"
        android:summary="@string/fprint_sucess_vib_summary"
        android:defaultValue="true" />

    <PreferenceCategory
        android:key="fingerprint_gestures_category"
        android:title="@string/fingerprint_gestures_category">

        <com.dirtyunicorns.dutweaks.preference.SystemSettingSwitchPreference
            android:key="quick_pulldown_fp"
            android:title="@string/quick_pulldown_fp_title"
            android:summary="@string/quick_pulldown_fp_summary"
            android:defaultValue="false" />

        <ListPreference
            android:key="fp_swipe_call_actions"
            android:title="@string/fp_swipe_call_actions_title"
            android:summary="%s"
            android:entries="@array/fp_swipe_call_actions_entries"
            android:entryValues="@array/fp_swipe_call_actions_values"
            android:defaultValue="0" />

    </PreferenceCategory>
</PreferenceScreen>
